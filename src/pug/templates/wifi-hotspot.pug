script#wifi-hotspot-template(type="text/x-template")
  dialog.wifi-hotspot(v-ref:dialog, width="400px",
    :header="'Create a WiFi Hotspot on ' + net.name", :buttons="buttons")

    div(slot="body")
      .pure-form.pure-form-aligned
        .pure-control-group
          label(for="channel") Channel
          select(name="channel", v-model="channel")
            option(v-for="ch in net.channels", :value="ch") {{ch}}

        .pure-control-group
          label(for="ssid") Network (SSID)
          input(name="ssid", v-model="ssid", focus)

        .pure-control-group
          label(for="password") Password
          input.password(name="password", v-model="password",
            autocomplete="new-password")

        .pure-control-group
          label(for="password2") Password (Again)
          input.password(name="password2", v-model="password2",
            autocomplete="off")
