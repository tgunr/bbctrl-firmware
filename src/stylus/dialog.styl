.dialog-mask
  position fixed
  z-index 1000
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(0, 0, 0, .25)
  display table
  transition opacity .3s ease

.dialog-mask *
  overscroll-behavior contain

.dialog-wrapper
  display table-cell
  vertical-align middle

.dialog-container
  width 24em
  margin 0px auto
  padding 20px 30px
  max-width calc(100vw - 60px)
  max-height calc(100vh - 40px)
  background-color #fff
  border-radius 2px
  box-shadow 0 2px 8px rgba(0, 0, 0, .33)
  transition all .3s ease
  font-family Helvetica, Arial, sans-serif
  text-align left

.dialog-header
  border-bottom 1px solid #777
  margin-bottom 1em

  > *
    margin 0

.dialog-body
  flex 1

.dialog-container, .dialog-body
  display flex
  flex-direction column
  overflow hidden

.dialog-body
  overflow-y auto
  padding 0.125em 0

.dialog-footer
  display flex
  gap 0.5em
  margin-top 1em
  margin-left auto

.dialog-enter, .dialog-leave
  opacity 0

.dialog-enter .dialog-container
  transform scale(1.1)

.dialog-leave .dialog-container
  transform scale(0.9)
